@model Assignment.WebApp.Models.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Logga in";
}



<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <h1>Logga in</h1>
        <form asp-action="SignIn" class="mt-4" asp-route-returnUrl=@Model.ReturnUrl>
            <div class="mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" type="password" class="text-danger"></span>
            </div>
            <div class="my-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-primary">Logga in</button>
        </form>
        <div class="mt-3">
            Inget konto? <a asp-action="SignUp">Registrera</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
